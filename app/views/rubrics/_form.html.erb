<%= form_for(@rubric) do |f| %>
    <% if @rubric.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@rubric.errors.count, 'error') %></h2>
          <ul>
            <% @rubric.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, 'Название' %><br>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :body, 'Содержимое' %><br>
      <%= f.text_area :body, rows: '10', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Создать', class: 'btn btn-primary' %>
    </div>
<% end %>